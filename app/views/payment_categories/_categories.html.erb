<%= turbo_frame_tag("payment_categories_frame") do %>
  <div class="flex flex-col gap-8 w-full">
    <h1 class="text-xl font-bold">
      Categorias
    </h1>

    <ul id="payments_categories" class="flex flex-col gap-6">
      <% if payment_categories.empty? %>
        <span class="text-gray-400">
          Nenhuma categoria cadastrada
        </span>
      <% else %>
        <% payment_categories.each do |payment_category| %>
          <%= render partial: "payment_category", locals: { payment_category: payment_category } %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
