<div class="flex flex-col gap-8 w-full">
  <h1 class="text-xl font-bold">
    Categorias
  </h1>

  <ul class="flex flex-col gap-2">
    <% if categories.empty? %>
      <span class="text-gray-400">
        Nenhuma categoria cadastrada
      </span>
    <% else %>
      <% categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    <% end %>
  </ul>
</div>