<turbo-frame id="payment-categories-modal-tag">
  <div class="fixed right-0 top-0 bottom-0">
    <div class="flex flex-col gap-8 w-full shadow-lg py-12 px-8 h-screen max-w-[500px] z-10 bg-white overflow-y-auto">
      <div class="flex flex-col gap-4 w-full">
        <div class="flex justify-between mb-6">
          <h1 class="text-xl font-bold">
            Categorias
          </h1>

          <form method="get" action="<%= payments_path %>">
            <button
              type="submit"
              title="Fechar"
              class="flex items-center justify-center w-6 h-6 rounded-full hover:opacity-50 ease-in-out duration-200"
            >
              <span class="material-symbols-outlined cursor-pointer">close</span>
            </button>
          </form>
        </div>

        <turbo-frame id="payment_category_form_tag" src="<%= new_payment_category_url %>">
        </turbo-frame>
      </div>

      <%= render partial: "categories", locals: { payment_categories: @payment_categories } %>
    </div>
  </div>
</turbo-frame>
