<%= turbo_stream_from :payment_categories %>

<section class="grid grid-cols-2 gap-4 p-20 w-screen h-screen">
  <div class="flex flex-col">
    <div class="flex flex-col gap-6">
      <%= turbo_frame_tag("payment_category_form") do %>
        <div class="flex flex-col gap-6">
            <h1 class="text-xl font-bold">
              Nova Categoria
            </h1>

          <%= link_to new_payment_category_path  %>

            <%#= render partial: "form", locals: { payment_category: PaymentCategory.new } %>
        </div>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag("payment_categories") do %>
    <div id="categories">
      <%= render partial: "categories", locals: { payment_categories: @payment_categories } %>
    </div>
  <% end %>
</section>