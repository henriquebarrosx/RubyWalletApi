<% if @payment_category.errors.any? %>
  <%= turbo_stream.replace("payment_category_form_frame") do %>
    <%= render partial: "form", locals: { payment_category: @payment_category } %>
  <% end %>
<% else %>
  <%= turbo_stream.replace(dom_id(@payment_category, :li)) do %>
    <%= render partial: "payment_category", locals: { payment_category: @payment_category } %>
  <% end %>

  <%= turbo_stream.replace @payment_category do %>
    <%= render partial: "payment_category", locals: { payment_category: @payment_category } %>
  <% end %>
<% end %>