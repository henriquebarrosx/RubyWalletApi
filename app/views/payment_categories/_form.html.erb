<div class="flex flex-col gap-6">
  <%= form_with(model: payment_category, html: { :id => dom_id(payment_category, :form) }) do |form| %>
    <div class="flex flex-col gap-2">
      <div class="flex gap-4">
        <%= form.text_field :name, placeholder: "Ex.: ServiÃ§os", class: "w-full h-12 rounded" %>
        <%= form.submit "Cadastrar", title: "Salvar categoria", class: "bg-[#3155d2] hover:opacity-50 ease-in-out duration-200 disabled:bg-blue-100 text-white disabled:text-black cursor-pointer disabled:cursor-not-allowed h-12 rounded w-32" %>
      </div>

      <% if payment_category.errors.any? %>
        <span class="text-red-500">
          <%= payment_category.errors.full_messages_for(:name).join(',') %>
        </span>
      <% end %>
    </div>
  <% end %>
</div>