<%= form_with(model: payment_category, html: { :id => dom_id(payment_category, :form) }) do |payment_category_form| %>
  <div class="flex flex-col gap-4">
    <div class="flex flex-col gap-1">
      <%= payment_category_form.label "Nome" %>

      <%= payment_category_form.text_field :name,
                          class: "w-72 rounded",
                          id: "category-name-field",
                          placeholder: "Ex.: ServiÃ§os"
      %>

      <% payment_category.errors.full_messages_for(:name).each do |message| %>
        <span class="text-red-300">
          <%= message %>
        </span>
      <% end %>
    </div>

    <%= payment_category_form.submit "Salvar",
                    title: "Cadastrar nova categoria",
                    class: "bg-[#3155d2] disabled:bg-blue-100 text-white disabled:text-black cursor-pointer disabled:cursor-not-allowed h-12 rounded w-72"
    %>
  </div>
<% end %>