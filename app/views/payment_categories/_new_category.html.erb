<div class="flex flex-col gap-6">
  <h1 class="text-xl font-bold">
    Nova Categoria
  </h1>

  <%= form_with model: payment_category do |form| %>
    <div class="flex flex-col gap-4">
      <div>
          <%= form.label "Nome" %><br>
          <%= form.text_field :name, id: 'category-name-field', class: "w-72" %>
      </div>

      <%= form.submit "Salvar", 
        title: "Cadastrar nova categoria",
        class: "bg-[#3155d2] disabled:bg-blue-100 text-white disabled:text-black cursor-pointer disabled:cursor-not-allowed h-12 rounded w-72" 
      %>
    </div>
  <% end %>
</div>
